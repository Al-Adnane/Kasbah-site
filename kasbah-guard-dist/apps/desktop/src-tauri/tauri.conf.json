{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KasbahGuard",
  "version": "0.1.0",
  "identifier": "io.bekasbah.guard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { "title": "Kasbah Guard", "width": 1100, "height": 740, "resizable": true, "center": true }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://127.0.0.1:* http://localhost:*; frame-ancestors 'none'; base-uri 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": ["icons/icon.png"],
    "resources": ["extension/**/*"]
  }
}
